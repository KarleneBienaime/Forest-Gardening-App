<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom layer: darker brown -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#81482F" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="#837D74" />
        </shape>
    </item>

    <!-- Top layer: lighter brown, slightly smaller -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#875535" />
            <corners android:radius="6dp" />
            <stroke
                android:width="1dp"
                android:color="#A09283" />
        </shape>
    </item>
</layer-list>
